<html>
    <head>
        <title>Messages</title>
    </head>
    <body>
        <h1>Messages</h1>
        <ul>
            <% messages.forEach(function(message) { %>
                <li>
                    <strong>Username:</strong> <%= message.username %><br>
                    <strong>Message:</strong> <%= message.message %><br>
                    <strong>Date:</strong> <%= message.created_at.toLocaleString() %>
                </li>
                <hr>
            <% }) %>
        </ul>
        <button><a href="/new">Add new message</a></button>
        <form action="/deleteMessages" method="POST">
            <button type="submit">Clean up the board</button>
        </form>
    </body>
</html>